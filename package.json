{
  "name": "node-mh",
  "version": "0.0.1",
  "description": "JMH-like benchmark harness for Node.js (MVP)",
  "license": "MIT",
  "type": "commonjs",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "node-mh": "dist/src/cli/main.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc -p tsconfig.json",
    "prepublishOnly": "npm run clean && npm run build",
    "example": "npm run build && node dist/src/cli/main.js run \"dist/benches/**/*.bench.js\""
  },
  "dependencies": {
    "benchmark": "^2.1.4",
    "fast-glob": "^3.3.3"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3"
  }
}
